<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Design.PreviewWith>
    <Border Padding="20"
            Background="{DynamicResource PrimaryBackground}"
            Width="300"
            Height="170">
      <!-- Add Controls for Previewer Here -->
      <StackPanel Spacing="15">
        <ListBox>
          <ListBoxItem>1. Test.</ListBoxItem>
          <ListBoxItem>2. Test.</ListBoxItem>
          <ListBoxItem>3. Test.</ListBoxItem>
        </ListBox>
      </StackPanel>
    </Border>
  </Design.PreviewWith>

  <!-- Add Styles Here -->
  <Style Selector="ListBox">
    
  </Style>

  <Style Selector="ListBox">
    <Setter Property="Background" Value="{DynamicResource PrimaryBackgroundGradient}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource DefaultGradient}"/>
    <Setter Property="BorderThickness" Value="3"/>
    <Setter Property="CornerRadius" Value="3"/>
    <Setter Property="Foreground" Value="{DynamicResource PrimaryForeground}"/>

    <Style Selector="^:pointerover">
      <Setter Property="BorderBrush" Value="{DynamicResource HoverGradient}"/>
    </Style>
  </Style>

</Styles>
