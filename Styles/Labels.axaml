<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Design.PreviewWith>
    <Border Padding="20"
            Width="300"
            Background="{DynamicResource PrimaryBackground}">
      <!-- Add Controls for Previewer Here -->
      <StackPanel Spacing="15">
        <Label Classes="h1"
               Content="H1 Label"/>
        <Label Classes="h2"
               Content="H2 Label"/>
        <Label Classes="h2 success"
               Content="H2 Label Succes"/>
        <Label Classes="sub1"
               Content="Sub1 Label"/>
        <Label Classes="sub2"
               Content="Sub2 Label"/>
        <Label Classes="success"
               Content="Success Label"/>
        <Label Content="Normal label"/>
        <Label Classes="icon"
               Content="&#xE2C4;"/>
        <Label Classes="icon-only">&#xE03A;</Label>
      </StackPanel>
    </Border>
  </Design.PreviewWith>

  <!-- Add Styles Here -->

  <Style Selector="Label">
    <Setter Property="Foreground" Value="{DynamicResource PrimaryForeground}"/>
  </Style>

  <Style Selector="Label.h1">
    <Setter Property="FontSize" Value="34"/>
    <Setter Property="FontWeight" Value="Black"/>
    <Setter Property="Padding" Value="0"/>
    <Setter Property="Margin" Value="0"/>
  </Style>

  <Style Selector="Label.h2">
    <Setter Property="Padding" Value="0 0 8 0"/>
    <Setter Property="FontWeight" Value="Black"/>
    <Setter Property="FontSize" Value="20"/>
  </Style>

  <Style Selector="Label.sub1">
    <Setter Property="Foreground" Value="{DynamicResource AlertButtonBackgroundGradient}"/>
    <Setter Property="FontSize" Value="14"/>
    <Setter Property="FontWeight" Value="Bold"/>
    <Setter Property="Padding" Value="0"/>
    <Setter Property="Margin" Value="0 -5 0 0"/>
  </Style>

  <Style Selector="Label.sub2">
    <Setter Property="FontSize" Value="12"/>
    <Setter Property="FontWeight" Value="Bold"/>
    <Setter Property="Padding" Value="0"/>
    <Setter Property="Margin" Value="0 -5 0 0"/>
  </Style>

  <Style Selector="Label.success">
    <Setter Property="Foreground" Value="{DynamicResource SuccessGradient}"/>
  </Style>

  <Style Selector="Label.icon, Label.icon-only">
    <Setter Property="FontFamily" Value="{DynamicResource PhosphorFill}"/>
    <Setter Property="Margin" Value="0 -2 8 0"/>
  </Style>

</Styles>
